{
  "name": "photography-blog",
  "private": true,
  "version": "1.0.0",
  "description": "Photography blog with Strapi backend and Next.js frontend",
  "scripts": {
    "backend": "cd backend && yarn develop",
    "frontend": "cd frontend && yarn dev",
    "dev": "npm-run-all --parallel backend frontend",
    "build:backend": "cd backend && yarn build",
    "build:frontend": "cd frontend && yarn build",
    "build": "npm-run-all build:backend build:frontend",
    "start:backend": "cd backend && yarn start",
    "start:frontend": "cd frontend && yarn start",
    "start": "npm-run-all --parallel start:backend start:frontend"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "cross-env": "^7.0.3",
    "wait-on": "^5.2.1"
  },
  "workspaces": ["backend", "frontend"]
}
