{
  "collectionName": "components_sections_gallery_items",
  "info": {
    "displayName": "Gallery Item",
    "description": "An individual image in a gallery with caption and display options"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "caption": {
      "type": "string"
    },
    "alt_text": {
      "type": "string"
    },
    "display_size": {
      "type": "enumeration",
      "enum": ["small", "medium", "large", "full"],
      "default": "medium"
    }
  }
}
